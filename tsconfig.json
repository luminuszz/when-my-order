{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "module": "esnext",
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ]
    }
  },

}